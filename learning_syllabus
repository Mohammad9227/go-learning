├── go.mod                     # Go modules file
├── basics/                    # Fundamentals
│   ├── variables/             # Variable declarations and types
│   ├── control-flow/          # If/else, loops, switch statements
│   ├── functions/             # Function declarations and usage
│   └── error-handling/        # Error handling patterns
├── data-structures/
│   ├── arrays-slices/         # Working with arrays and slices
│   ├── maps/                  # Map implementations
│   ├── structs/               # Custom data types with structs
│   └── pointers/              # Pointer usage
├── concurrency/
│   ├── goroutines/            # Basic goroutine examples
│   ├── channels/              # Channel patterns
│   ├── select/                # Select statement usage
│   └── sync/                  # Mutex and WaitGroup examples
├── interfaces/
│   ├── basics/                # Interface implementation
│   ├── embedding/             # Struct embedding
│   └── type-assertions/       # Working with interface types
├── standard-library/
│   ├── io/                    # File and I/O operations
│   ├── json/                  # JSON processing
│   ├── http/                  # HTTP client and server
│   └── testing/               # Unit and benchmark tests
└── projects/                  # Complete application examples
    ├── cli-tool/              # Command-line application
    ├── rest-api/              # HTTP service implementation
    └── db-app/                # Database integration example